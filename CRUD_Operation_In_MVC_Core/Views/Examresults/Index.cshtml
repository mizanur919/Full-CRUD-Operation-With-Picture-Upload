@model IEnumerable<CRUD_Operation_In_MVC_Core.Model.Db.Examresult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-condensed table-responsive table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Examname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Institution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Board)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Examname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Institution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Board)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Id)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { Examsl = item.Examsl, Studentid = item.Studentid }) |
                    @Html.ActionLink("Details", "Details", new { Examsl = item.Examsl, Studentid = item.Studentid }) |
                    @Html.ActionLink("Delete", "Delete", new { Examsl = item.Examsl, Studentid = item.Studentid })
                </td>
            </tr>
        }
    </tbody>
</table>
